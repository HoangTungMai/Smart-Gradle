<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".VerifyActivity">

    <TextView
        android:id="@+id/VerifyActivity_verificationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/VerifyActivity_verificationCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã xác nhận"
        android:imeOptions="actionNext"
        android:inputType="phone|numberDecimal"/>

    <Button
        android:id="@+id/VerifyActivity_confirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhân"
        android:layout_marginTop="30dp"/>





</LinearLayout>